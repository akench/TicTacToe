<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theflyingostrich.game.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_orange_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="@string/app_name">
        <activity
            android:name="com.theflyingostrich.game.tictactoe.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theflyingostrich.game.tictactoe.ClassicGameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theflyingostrich.game.tictactoe.GameSetupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theflyingostrich.game.tictactoe.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>